<odoo>
  <record id="view_whatsapp_reply_wizard_form" model="ir.ui.view">
    <field name="name">whatsapp.reply.wizard.form</field>
    <field name="model">whatsapp.reply.wizard</field>
    <field name="arch" type="xml">
      <form string="Reply via WhatsApp">
        <group>
          <field name="lead_id" invisible="1"/>
          <field name="partner_id" readonly="1"/>
          <field name="to_number"/>
          <field name="window_ok" readonly="1"/>
          <field name="message" widget="text" placeholder="Type your reply..."/>
          <separator string="Attachments"/>
          <field name="attachment_ids"
                 widget="many2many_binary"
                 filename="name"
                 options="{'no_create': False, 'no_open': True}"
                 nolabel="1"/>
        </group>
        <footer>
          <button name="action_send" type="object" string="Send" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- Your action record should already exist and point to this form via view_id -->
  <!-- Keep it as-is if already present. If missing, uncomment this: 
  <record id="action_whatsapp_reply_wizard" model="ir.actions.act_window">
    <field name="name">Reply via WhatsApp</field>
    <field name="res_model">whatsapp.reply.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_whatsapp_reply_wizard_form"/>
    <field name="target">new</field>
    <field name="context">{'default_lead_id': active_id}</field>
  </record>
  -->
</odoo>

