<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form_whatsapp_button" model="ir.ui.view">
        <field name="name">sale.order.form.whatsapp.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header>
                <button name="%(whatsapp_meta_integration.send_whatsapp_wizard_action)d"
                    type="action"
                    string="Send WhatsApp"
                    class="btn-secondary"
                    context="{'default_partner_id': partner_id}"/>
            </header>
        </field>
    </record>
</odoo>