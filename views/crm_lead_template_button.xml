<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Add "Send WhatsApp Template" back to the Lead header -->
  <record id="view_crm_lead_form_inherit_whatsapp_template_btn" model="ir.ui.view">
    <field name="name">crm.lead.form.inherit.whatsapp.template.btn</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_lead_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form/header" position="inside">
        <button name="%(whatsapp_meta_integration.action_send_whatsapp_wizard)d"
                type="action"
                string="Send WhatsApp Template"
                class="btn-secondary"
                context="{'default_lead_id': active_id}"
                attrs="{'invisible': [('partner_id', '=', False)]}"/>
      </xpath>
    </field>
  </record>
</odoo>
